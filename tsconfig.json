    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "typeRoots": ["./src/custom_typings", "./node_modules/@types"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules", "**/*.spec.ts", "./build"]
}